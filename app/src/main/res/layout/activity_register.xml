<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rlawnsgh78.chatapp.RegisterActivity">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Id"
        tools:ignore="HardcodedText"
        app:met_floatingLabelAlwaysShown = "true"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Id"
        android:layout_marginTop="50dp"
        app:met_singleLineEllipsis="true"
        app:met_minCharacters="6"
        app:met_maxCharacters="20"
        android:id="@+id/edit_Register_Id" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_marginTop="120dp"
        app:met_floatingLabelAlwaysShown = "true"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Password"
        app:met_singleLineEllipsis="true"
        tools:ignore="HardcodedText"
        app:met_minCharacters="6"
        app:met_maxCharacters="20"
        android:id="@+id/edit_Register_Password"
        android:inputType="textPassword" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NickName"
        android:layout_marginTop="190dp"
        app:met_floatingLabelAlwaysShown = "true"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="NickName"
        tools:ignore="HardcodedText"
        app:met_singleLineEllipsis="true"
        app:met_minCharacters="3"
        app:met_maxCharacters="12"
        android:id="@+id/edit_Register_Nickname" />

    <Button
        android:text="회원가입 완료"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:id="@+id/btn_register_done"
        tools:ignore="HardcodedText"
        android:layout_width="160dp" />

</RelativeLayout>
