<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/area_chat"
    android:layout_height="80dp"
    android:layout_width="wrap_content">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/txt_chat_friend_nickname"
        android:layout_marginLeft="16dp"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black" />

    <TextView
        android:text="TextView"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_chat_message"
        android:textColor="@android:color/black"
        android:background="@drawable/message_background_friend"
        android:gravity="center"
        android:layout_alignBaseline="@+id/txt_chat_friend_nickname"
        android:layout_alignBottom="@+id/txt_chat_friend_nickname"
        android:layout_toEndOf="@+id/txt_chat_friend_nickname" />
</RelativeLayout>
